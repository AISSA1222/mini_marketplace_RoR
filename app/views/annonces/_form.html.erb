<%= form_with(model: annonce) do |form| %>
  <% if annonce.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(annonce.errors.count, "error") %> prohibited this annonce from being saved:</h2>

      <ul>
        <% annonce.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :titre, style: "display: block" %>
    <%= form.text_field :titre %>
  </div>

   <div>
    <%= form.label :description, style: "display: block"%>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :category, style: "display: block" %>
    <%= form.select :category , options_for_select(['Category 1', 'Category 2', 'Category 3'])%>
  </div>

  <div>
    <%= form.label :prix, style: "display: block" %>
    <%= form.number_field :prix %>
  </div>

  <div>
    <%= form.label :city, style: "display: block" %>
    <%= form.text_field :city %>
  </div>

  <div>
    <%= form.label :date, style: "display: none" %>
    <%= form.hidden_field :date %>
  </div>

   <div>
    <%= form.label :image, style: "display: none" %>
    <%= form.file_field :image, accept: 'image/*' %>
  </div>

   <div>
    <%= form.label :user_id, style: "display: none" %>
    <%= form.number_field :user_id, value: current_user.id,type: :hidden %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
